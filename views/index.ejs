          <div class="span5 center">
            <div id="alert_placeholder">

            </div>
            <section id="app">

              <p><video id="monitor" autoplay></video> <canvas id="photo" style="display:none;" ></canvas></p>
              <div class="form-inline">
                <input value="Login" type=button id="snapshotbutton" class="btn btn-info btn-large">
                &nbsp;OR&nbsp;
                <div class="input-append">
                  <input class="span2" id="username" type="text" placeholder="Username">
                  <button id="signup" class="btn" type="button">Sign Up</button>
                </div>
              </div>
            </section>
